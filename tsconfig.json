{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "newLine": "lf",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {"@/*": ["*"] },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./src/" ],
  "exclude": ["./dist", ".vscode", "node_modules"]
}
